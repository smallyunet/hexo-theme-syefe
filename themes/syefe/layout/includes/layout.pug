
- var pageTitle = page.title || ''
- if (is_archive()) pageTitle = 'Archives'
- if (is_tag()) pageTitle = 'Tag: ' + page.tag + ' - '
- if (is_category()) pageTitle = 'Category: ' + page.category
- if (is_month()) pageTitle += ': ' + page.month + '/' + page.year
- if (is_year()) pageTitle += ': ' + page.year
- if (is_post()) pageTitle = page.title + ' - '
- pageTitle += config.title
- if (is_home()) pageTitle += ' - ' + config.subtitle

doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    title= pageTitle
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      //- stylesheets list from config.yml
      each url in theme.stylesheets
        link(rel='stylesheet', href=(config.root + url))
    link(rel="icon", href=config.root + 'img/favicon.png')
  body
    if body
      div!= body
    else
      block content

    if theme.scripts !== undefined && theme.scripts.length > 0
      //- scripts list from config.yml
      each url in theme.scripts
        script(src=url)

  footer
    p.copy
      | &copy; Designed by 
      a(href='http://efe.baidu.com' target='_blank' title='EFE') EFE
      |  | Powered By 
      a(href='http://hexo.io' target='_blank' title='Hexo') Hexo
